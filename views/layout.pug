doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title CraftSmart - Craftsman Outsourcing Platform
    link(rel="stylesheet", href="/css/style.css")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
    script(src="https://cdn.jsdelivr.net/npm/chart.js")
    block head

  body(class=(path === '/' ? 'homepage' : '') data-user-id=user ? user._id : '')
    header.header
      .container
        .header-content
          .logo
            a(href="/")
              i.fa-solid.fa-hammer.nav-icon
              | CraftSmart

          nav.nav(id="nav")
            .profile-section
              if user
                .profile-info
                  a(href=`/${user.role}/profile`)
                    if user.profilePicture
                      img.profile-avatar(src=user.profilePicture, alt="Profile Picture")
                    else
                      .profile-initial-placeholder 
                        i.fa-solid.fa-user.nav-icon
                    .profile-details
                      span.profile-name #{user.name}
              else
                .profile-info
                  .profile-initial-placeholder
                    i.fa-solid.fa-user.nav-icon

            ul.nav-list
              if user
                li
                  a(href=`/${user.role}/dashboard`)
                    i.fa-solid.fa-tachometer-alt.nav-icon
                    span Dashboard
                if user.role === 'employer'
                  li
                    a(href="/employer/post-job")
                      i.fa-solid.fa-briefcase.nav-icon
                      span Post Job
                  li
                    a(href="/employer/browse-craftsmen")
                      i.fa-solid.fa-users.nav-icon
                      span Browse Craftsmen
                if user.role === 'admin'
                  li
                    a(href="/admin/blacklist")
                      i.fa-solid.fa-user-shield.nav-icon
                      span Admin Blacklist
                if user.role === 'craftsman'
                  li.mobile-only
                    a(href="/craftsman/profile")
                      i.fa-solid.fa-id-card.nav-icon
                      span My Profile
                li
                  a(href="/public-blacklist")
                    i.fa-solid.fa-ban.nav-icon
                    span Public Blacklist
                li.mobile-only
                  a(href="/logout")
                    i.fa-solid.fa-sign-out-alt.nav-icon
                    span Logout
              else
                li
                  a(href="/login")
                    i.fa-solid.fa-sign-in-alt.nav-icon
                    span Login
                li
                  a(href="/register")
                    i.fa-solid.fa-user-plus.nav-icon
                    span Register
                li
                  a(href="/contact")
                    i.fa-solid.fa-envelope.nav-icon
                    span Contact Us

          .header-icons
            if user
              a.nav-icon.notification-link(href="#")
                i.fa-solid.fa-bell.nav-icon
                span#notification-badge.notification-badge 0
              a.nav-icon.messages-link(href="/messages")
                i.fa-solid.fa-envelope.nav-icon
              .profile-dropdown
                a.nav-icon.profile-icon(href="#", onclick="toggleDropdown(event)")
                  i.fa-solid.fa-user-circle.nav-icon
                .profile-dropdown-content#profileDropdown
                  a(href=`/${user.role}/profile`)
                    i.fa-solid.fa-user.mr-2.nav-icon
                    | My Profile
                  a(href="/contact")
                    i.fa-solid.fa-envelope.mr-2.nav-icon
                    | Contact Us
                  a(href="/logout")
                    i.fa-solid.fa-sign-out-alt.mr-2.nav-icon
                    | Logout

          .mobile-menu-toggle(onclick="toggleMobileMenu()")
            span
            span
            span

    main.main
      block content

    footer.footer
      .container
        p &copy; 2025 CraftSmart. All rights reserved.

    // Socket.io and custom JS
    script(src="/socket.io/socket.io.js")
    script(src="/js/scripts.js")

    block scripts

    script.
      console.log("âœ… layout.pug JS loaded");

      function toggleDropdown(event) {
        event.stopPropagation();
        const dropdown = document.getElementById("profileDropdown");
        if (dropdown) dropdown.classList.toggle("show");
      }

      window.onclick = function(event) {
        if (!event.target.matches('.profile-icon i')) {
          var dropdowns = document.getElementsByClassName("profile-dropdown-content");
          for (var i = 0; i < dropdowns.length; i++) {
            var openDropdown = dropdowns[i];
            if (openDropdown.classList.contains('show')) {
              openDropdown.classList.remove('show');
            }
          }
        }
      }

      function toggleMobileMenu() {
        const nav = document.getElementById('nav');
        const toggle = document.querySelector('.mobile-menu-toggle');
        if (nav) nav.classList.toggle('nav-active');
        if (toggle) toggle.classList.toggle('open');
      }

