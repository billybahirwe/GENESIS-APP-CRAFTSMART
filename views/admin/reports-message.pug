extends ../layout

block content
  .container
    h1.mb-4 Reports Management
    span.badge.bg-danger.ms-2 #{reports.filter(r => !r.seen).length} New

    if reports.length === 0
      .text-center.py-5
        i.bi.bi-check-circle.display-1.text-success
        h4.mt-3 No Reports
        p.text-muted All reports have been addressed.
    else
      // ============================
      // Employer â†’ Craftsman Reports
      // ============================
      h3.mt-4.text-primary Employer Reports (About Craftsmen)
      .table-responsive.mb-5
        table.table.table-striped.table-bordered.align-middle#employer-reports-table
          thead.table-dark
            tr
              th Status
              th Subject
              th Craftsman
              th Employer
              th Job
              th Date
              th Report Message
              th Actions
          tbody
            each report in reports.filter(r => r.fromRole === 'employer')
              tr(class=report.seen ? '' : 'table-warning' id=`report-${report._id}`)
                td
                  if report.seen
                    span.badge.bg-success Seen
                  else
                    span.badge.bg-danger New
                td= report.reportSubject
                td
                  if report.craftsmanId
                    a(href=`/admin/craftsman/${report.craftsmanId._id}`)= report.craftsmanId.name
                  else
                    span.text-muted N/A
                td
                  if report.employerId
                    a(href=`/admin/employer/${report.employerId._id}`)= report.employerId.name
                    br
                    small.text-muted= report.employerId.mobile
                  else
                    span.text-muted N/A
                td
                  if report.jobId
                    a(href=`/job/${report.jobId._id}`, target="_blank")
                      strong= report.jobId.title || 'Untitled Job'
                    br
                    small.text-muted
                      | ID: 
                      a(href=`/job/${report.jobId._id}`, target="_blank")= report.jobId._id
                  else
                    span.text-muted N/A
                td= new Date(report.timestamp).toLocaleString()
                td= report.reportMessage
                td
                  button.btn.btn-danger.btn-sm(
                    type="button"
                    data-action="delete-report"
                    data-id=report._id
                  ) Delete

      // =============================
      // Craftsman â†’ Employer Reports
      // =============================
      h3.mt-4.text-success Craftsman Reports (About Employers)
      .table-responsive
        table.table.table-striped.table-bordered.align-middle#craftsman-reports-table
          thead.table-dark
            tr
              th Status
              th Subject
              th Craftsman
              th Employer
              th Job
              th Date
              th Report Message
              th Actions
          tbody
            each report in reports.filter(r => r.fromRole === 'craftsman')
              tr(class=report.seen ? '' : 'table-warning' id=`report-${report._id}`)
                td
                  if report.seen
                    span.badge.bg-success Seen
                  else
                    span.badge.bg-danger New
                td= report.reportSubject
                td
                  if report.craftsmanId
                    a(href=`/admin/craftsman/${report.craftsmanId._id}`)= report.craftsmanId.name
                  else
                    span.text-muted N/A
                td
                  if report.employerId
                    a(href=`/admin/employer/${report.employerId._id}`)= report.employerId.name
                    br
                    small.text-muted= report.employerId.mobile
                  else
                    span.text-muted N/A
                td
                  if report.jobId
                    a(href=`/job/${report.jobId._id}`, target="_blank")
                      strong= report.jobId.title || 'Untitled Job'
                    br
                    small.text-muted
                      | ID: 
                      a(href=`/job/${report.jobId._id}`, target="_blank")= report.jobId._id
                  else
                    span.text-muted N/A
                td= new Date(report.timestamp).toLocaleString()
                td= report.reportMessage
                td
                  button.btn.btn-danger.btn-sm(
                    type="button"
                    data-action="delete-report"
                    data-id=report._id
                  ) Delete

block scripts
  script.
    console.log("âœ… reports-message.pug JS loaded");

    // Shared delete button handler
    document.addEventListener('click', async function(e) {
      const btn = e.target.closest('button[data-action="delete-report"]');
      if (!btn) return;

      const id = btn.dataset.id;
      if (!confirm("Are you sure you want to delete this report?")) return;

      try {
        const res = await fetch(`/admin/reports/${id}`, {
          method: 'DELETE',
          headers: { "Content-Type": "application/json" },
          credentials: "same-origin"
        });

        const data = await res.json();
        if (data.success) {
          alert("âœ… Report deleted successfully.");
          const row = document.getElementById(`report-${id}`);
          if (row) row.remove();
        } else {
          alert("âŒ Failed to delete report.");
        }
      } catch (err) {
        console.error("ðŸš¨ Error deleting report:", err);
        alert("âš ï¸ Network error.");
      }
    });













