extends ../layout

block append head
  link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css')

block content
  .container
    .dashboard-header
      h1.dashboard-title Platform Balance Summary
      p.dashboard-subtitle View total fees, withdrawn amounts, and available balance

    if platformSummary
      .summary-cards(style="display:flex; flex-wrap:wrap; gap:1rem; margin-top:1rem;")
        .summary-card(style="flex:1 1 200px; padding:1rem; border:1px solid #ddd; border-radius:8px; text-align:center;")
          h4 Total Platform Fees
          p UGX #{platformSummary.totalPlatformFees.toLocaleString('en-UG')}
        .summary-card(style="flex:1 1 200px; padding:1rem; border:1px solid #ddd; border-radius:8px; text-align:center;")
          h4 Withdrawn
          p UGX #{platformSummary.withdrawn.toLocaleString('en-UG')}
        .summary-card(style="flex:1 1 200px; padding:1rem; border:1px solid #ddd; border-radius:8px; text-align:center;")
          h4 Available for Withdrawal
          p UGX #{platformSummary.availableForWithdraw.toLocaleString('en-UG')}
    else
      p No platform summary data available.

    a.btn.btn-secondary(href="/admin/dashboard") ‚Üê Back to Dashboard
