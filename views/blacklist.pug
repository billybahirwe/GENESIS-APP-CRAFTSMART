extends layout

block content
  .container
    .page-header
      h1.page-title Public Blacklist
      p.page-subtitle Users banned from the CraftSmart platform
    
    .blacklist-container
      if blacklist.length > 0
        .blacklist-grid
          each entry in blacklist
            .blacklist-card
              .blacklist-info
                h3.blacklist-name= entry.name
                p.blacklist-mobile Mobile: #{entry.mobile}
                p.blacklist-reason= entry.reason
                .blacklist-meta
                  span.blacklist-date Added: #{entry.addedAt.toLocaleDateString()}
      else
        .empty-state
